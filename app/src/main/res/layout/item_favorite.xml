<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardBackgroundColor="#fff176"
    card_view:cardCornerRadius="0dp"
    >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="0dp"
        android:background="#ffffff"
        >

        <net.cchevalier.photosplash.ui.custom.DynamicHeightImageView
            android:id="@+id/iv_favorite_photo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ffffff"
            />

        <TextView
            android:id="@+id/tv_author"
            tools:text="Author"
            android:layout_below="@+id/iv_favorite_photo"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            />

        <ImageView
            android:id="@+id/iv_favorite_indicator"
            android:src="@drawable/heart_full"
            android:layout_below="@+id/iv_favorite_photo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>

