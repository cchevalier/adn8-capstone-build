<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="@color/colorBackgroundLight"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorBackgroundLight"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="2dp">

        <net.cchevalier.photosplash.ui.custom.DynamicHeightImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorBackgroundLight"
            android:contentDescription="@string/desc_photo_small" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_photo"
            android:background="@color/colorBackgroundLight"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:textSize="16sp"
            tools:text="Author" />

        <!--
        <ImageView
            android:id="@+id/iv_favorite_indicator"
            android:src="@drawable/heart"
            android:layout_below="@+id/iv_photo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            />
-->

    </RelativeLayout>

</android.support.v7.widget.CardView>